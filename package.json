{
  "name": "typebolt",
  "version": "0.0.6",
  "description": "TypeScript static helpers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "dist"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "header format --write --add dist/*.js dist/*.ts",
    "test": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "github.com/kube/typebolt"
  },
  "author": {
    "name": "Chris Feijoo",
    "url": "https://github.com/kube"
  },
  "license": "MIT",
  "devDependencies": {
    "husky": "^4.2.5",
    "kube-header": "^1.2.14",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "prettier --write",
      "header format --write"
    ]
  }
}
